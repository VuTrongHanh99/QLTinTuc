@using Core.Domain.Entities     @*//option 2:*@
@model List<TheLoaiEntity>     //option 3:
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Thể loại tin";
    Layout = "_Layout";
}

    <div class="card">
        <div class="card-header border-transparent">
            <div class="">
                <h3 class="mt-1 card-title">Quản lí Thể loại tin</h3>
                <a asp-controller="TheLoai" asp-action="Create" class="ml-5 btn btn-sm btn-info float-left">Thêm mới</a>
            </div>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Mô tả</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rls in @Model)
                        {
                            <tr>
                                <td><a href="pages/examples/invoice.html">@rls.CategoryId</a></td>
                                <td>@rls.CategoryName</td>
                                <td><span class="badge badge-success">Status</span></td>
                                <td>
                                    <div class="sparkbar" data-color="#00a65a" data-height="20">Mô tả</div>
                                </td>
                                <td>
                                    <div class="badge mb-3 bg-success">
                                        <span class="info-box-icon"><i class="far fa-heart"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-number">Sửa</span>
                                        </div>
                                    </div>
                                    <div class="badge mb-3 bg-danger">
                                        <span class="info-box-icon"><i class="fas fa-cloud-download-alt"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-number">Xóa</span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a>
            <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
        </div>
        <!-- /.card-footer -->
    </div>
