@{
    ViewData["Title"] = "Menu Main";
    Layout = "_Layout";
} 
@model Core.Domain.Entities.MenuMainEntity
<p class="h3">Edit Menu Main</p>
<hr />
<form asp-action="Edit" asp-route-id="@Model.MenuId" enctype="multipart/form-data">
    <div class="card-body">
        <input asp-for="MenuId" value="@Model.MenuId" type="hidden"/>
        <div class="form-group">
            <label >Tên Menu</label>
            <input asp-for="MenuName" value="@Model.MenuName" class="form-control" id="exampleInputEmail1" placeholder="Enter menu">
        </div>
        <div class="form-group">
            <label>Chọn danh muc cha</label>
            <select asp-for="ParentId" value="@Model.ParentId" class="form-control">
                <option value="0">Danh muc gốc</option>
                <option value="10">option 2</option>
                <option value="20">option 3</option>
                <option value="30">option 4</option>
                <option value="40">option 5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Url</label>
            <input asp-for="MenuUrl" value="@Model.MenuUrl" class="form-control" id="exampleInputEmail1" placeholder="Enter Url">
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Status</label>
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="exampleInputFile">
                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                </div>
                <div class="input-group-append">
                    <span class="input-group-text">Upload</span>
                </div>
            </div>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Tiếp tục tạo menu</label>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" value="Edit" class="btn btn-primary">Save menu</button>
        <button asp-action="Index" value="Create" class="btn btn-primary">Back to List</button>
    </div>
</form>

