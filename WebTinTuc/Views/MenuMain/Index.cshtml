@using Core.Domain.Entities
@model List<MenuMainEntity>     //option 3:
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Menu Main";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header border-transparent">
        <div class="">
            <h3 class="mt-1 card-title">Quản lí Menu main</h3>
            <a asp-controller="MenuMain" asp-action="Create" class="ml-5 btn btn-sm btn-info float-left">Thêm mới</a>
        </div>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Name</th>
                        <th>ParentId</th>
                        <th>Status</th>
                        <th>Url</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rls in @Model)
                    {
                        <tr>
                            <td><a href="pages/examples/invoice.html">@rls.MenuId</a></td>
                            <td>@rls.MenuName</td>
                            <td>@rls.ParentId</td>
                            <td><span class="badge badge-success">Status</span></td>
                            <td>
                                <div class="sparkbar" data-color="#00a65a" data-height="20">@rls.MenuUrl</div>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a style="margin:3px" type="button" asp-route-id="@rls.MenuId" asp-controller="MenuMain" asp-action="Edit" class="badge bg-success">
                                        <span class="info-box-icon"><i class="far fa-heart"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-number">Sửa</span>
                                        </div>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@rls.MenuId">
                                        <button style="border-color:#dc3545!important" type="submit" value="Delete" class="badge bg-danger">
                                            <span class="info-box-icon"><i class="fas fa-cloud-download-alt"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-number">Xóa</span>
                                            </div>
                                        </button>
                                    </form>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a>
        <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
    </div>
    <!-- /.card-footer -->
</div>
